@model WebSort.Array
@{
    ViewData["Title"] = "Удаление массива";
}
<h2>@ViewBag.Title</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Статус</dt>
        <dd>
            @Model.SortStatus
        </dd>

        <dt>Массив</dt>
        <dd>
            @Model.Numbers
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input onclick="SuccessDelete()" type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Privacy">Вернуться к списку</a>
</div>