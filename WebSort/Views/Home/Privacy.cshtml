@model IEnumerable<WebSort.Array>
@{
	ViewData["Title"] = "Редактирование базы данных";
}
<h1>@ViewData["Title"]</h1>

<div>
	<p>
		<a asp-controller="Home" asp-action="Create" class="btn btn-outline-primary" role="button">Добавить</a>
	</p>
	<table class="table">
		<tr>
			<th>Id</th></>
			<th>Статус</th>
			<th>Массив</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.SortStatus</td>
				<td>@item.Numbers</td>

				<td>
					<a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Изменить</a> 
					<a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
					<form asp-controller="Home" asp-action="Sort" asp-route-id="@item.Id">
						<button type="submit" class="btn btn-link">Сортировать</button>
					</form>
				</td>
			</tr>
		}
	</table>
</div>